// Instead of using flash to check success. we should check @paga_transaction status
<% if flash[:success] %>
	$('td#'+"<%= @paga_transaction.id%>").html("")
	$('td.status').html("<%=j(Spree::PagaTransaction::SUCCESSFUL)%>")
<% end %>
$('#wrapper').prepend("<%= j(render :partial => 'spree/shared/flash_messages', :locals => {:additional_class => flash[:success] ? 'success' : 'error'}) %>");